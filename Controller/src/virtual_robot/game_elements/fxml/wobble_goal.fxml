<?xml version="1.0" encoding="UTF-8"?>

<!--Markup file for the Wobble Goal game element graphics-->

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.shape.Circle?>

<!--The root node is a Group object; this object has a stack of multiple children.  Tne
    fx:controller attribute indicates that Ring is the controller class-->

<Group xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="virtual_robot.game_elements.classes.WobbleGoal">
    <children>

        <!--The wobble goal-->
        <Circle fx:id="outerCircle" centerX="0" centerY="0" fill="#ba0000" radius="16.7" stroke="BLACK" strokeType="INSIDE" />
        <Circle centerX="0" centerY="0" fill="#ba0000" radius="3.0" stroke="BLACK" strokeType="INSIDE" />

    </children>
</Group>
